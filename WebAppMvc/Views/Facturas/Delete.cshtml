@model WebAppMvc.Models.Factura

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar una Factura</title>
    <style>
        a:hover {
            text-decoration: underline !important;
        }
    </style>
</head>
<body>
    <h3>Está seguro de eliminar la siguiente factura?</h3>
    <div style="background:#ffd274;">
        <hr />
        <dl class="dl-horizontal">
            <dd>
                Código de Turno:  @Html.DisplayFor(model => model.Turno.Id)
            </dd>
            <dd>
                Fecha:  @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dd>
                Monto a Pagar:  @Html.DisplayFor(model => model.Monto)
            </dd>

        </dl>

        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <input style="border: 1px solid black; border-radius: 5px; width:264px;" type="submit" name="Eliminar" value="Eliminar" />

        }
        <br />
        <a class="linki" style="font-weight:200; border-radius: 5px; background:#ffd274; text-decoration: none; color: black;" href="~/Facturas/Index">VOLVER A LA LISTA PRINCIPAL</a>
    </div>
</body>
</html>